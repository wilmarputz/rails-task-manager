<!-- app/views/tasks/index.html.erb -->
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td>
          <% if task.completed %>
            <i class="fas fa-check-square"></i> <!-- Font Awesome checked square icon -->
          <% else %>
            <i class="far fa-square"></i> <!-- Font Awesome empty square icon -->
          <% end %>
        </td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
